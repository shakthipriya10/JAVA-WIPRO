import java.util.Arrays;

public class FindExtremes {
    public static void main(String[] args) {
        int[] numbers = {3, 7, 1, 9, 12, 5, 8};
        if (numbers.length < 4) {
            System.out.println("Array must have at least 4 elements.");
            return;
        }
        Arrays.sort(numbers);
        int smallest1 = numbers[0];
        int smallest2 = numbers[1];
        int largest1 = numbers[numbers.length - 1];
        int largest2 = numbers[numbers.length - 2];
        System.out.println("Smallest two numbers are: " + smallest1 + " and " + smallest2);
        System.out.println("Largest two numbers are: " + largest1 + " and " + largest2);
    }
}
